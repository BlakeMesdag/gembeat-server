<h3>Applications <%= link_to raw('<i class="icon icon-plus icon-white"></i> Add'), new_application_url, class: "btn btn-small btn-success" %></h3>

<%= form_tag"/", method: :get, class: "form form-search" do %>
  <%= text_field_tag :gem, params["gem"], placeholder: "gem name (ex. rake)", class: "search-query" %>
  <%= select_tag :operator, options_for_select(@operators), class: "input-mini" %>
  <%= text_field_tag :version, params["version"], placeholder: "version", class: "search-query input-small" %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<% if @applications.count > 0 %>
  <table class="table table-condensed">
    <thead>
      <th>Name</th>
      <th>Description</th>
      <th>Github Url</th>
      <th># of Dependencies</th>
      <th>Vulnerable?</th>
    </thead>

    <tbody>
      <% @applications.each do |application| %>
      <tr>
        <td><%= link_to application.name, application_url(application) %></td>
        <td><%= application.description %></td>
        <td><% if application.github_url %><%= link_to application.github_url, application.github_url %><% end %></td>
        <td><%= application.dependencies.count %></td>
        <td><%= application.vulnerable? ? "Yes" : "No" %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <div class="row">
    <div class="span12">
      <p class="muted">No applications found</p>
    </div>
  </div>
<% end %>