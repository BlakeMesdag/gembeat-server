<h3>Applications using "<%= params[:id].to_s %>"<%= " version #{params[:version].to_s}" if params[:version] %>:</h3>

<table class="table table-condensed">
  <thead>
    <th class="status-icon"></th>
    <th>Name</th>
    <th>Version</th>
  </thead>

  <tbody>
    <% @dependencies.each do |dependency| %>
    <tr class="<%= vulnerable_class(dependency) %>">
      <td><%= vulnerable_icon(dependency) %></td>
      <td>
        <%= link_to dependency.application.name, url_for(dependency.application) %>
      </td>
      <td>
        <%= link_to dependency.version, url_for(version: dependency.version) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
